<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <!--
        hostingModel="InProcess"  — runs inside the IIS worker process (faster)
        hostingModel="OutOfProcess" — runs Kestrel behind IIS as a reverse proxy

        processPath: "dotnet" for framework-dependent, or ".\AnPhucNienSo.Api.exe" for self-contained

        Set ASPNETCORE_ENVIRONMENT to "Production" for production deployments.
        Change it to "Development" on dev servers to enable Swagger UI.
      -->
      <aspNetCore processPath="dotnet"
                  arguments=".\AnPhucNienSo.Api.dll"
                  stdoutLogEnabled="true"
                  stdoutLogFile=".\logs\stdout"
                  hostingModel="InProcess">
        <environmentVariables>
          <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
        </environmentVariables>
      </aspNetCore>
    </system.webServer>
  </location>
</configuration>
